<%= form_with(model: [ @product, @product.reviews.new ], local: true) do |form| %>
  <% if @review && @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rating %><br>
    <%= form.select :rating, options_for_select(1..5), {}, required: true %>
  </div>

  <div class="field">
    <%= form.label :comment %><br>
    <%= form.text_area :comment, rows: 5, placeholder: "Write your review here...", required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Submit Review" %>
  </div>
<% end %>
